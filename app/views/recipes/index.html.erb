<h1>Yummy Recipes</h1>	


 <table class="table">	
  <thead>	
    <tr>	
      <th colspan="3"></th>	
    </tr>	
  </thead>	

   <tbody>	
    <tr> 	
      <td><strong>Name</strong></td>|

      <td><strong>Prep Time</strong></td>|

      <td><strong>Directions</strong></td>	
    </tr>
        <% @recipes .each do |recipe| %>	
      <tr>	
         <td><%= recipe.name %></td>	
        <td><%= recipe.prep_time %></td>	
         <td><%= link_to "Click for Directions", recipe_path(recipe) %></td>
   <% end %>	
      </tr>	
  </tbody>	
</table>	
<br>
<p>
<footer id="footer">
<% if current_user %>
<p>You are logged in as: <%= current_user.email %></p>
<p><%=link_to "Logout", logout_path%></p>
  <% end %>
</footer>