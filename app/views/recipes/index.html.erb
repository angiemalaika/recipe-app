<h1>Yummy Recipes</h1>	

 <table class="table">	
  <thead>	
    <tr>	
      <th colspan="3"></th>	
    </tr>	
  </thead>	

   <tbody>	
    <tr> 	
      <td><strong>Name</strong></td>	
      <td><strong>Cooking Time</strong></td>	
      <td><strong>Directions</strong></td>	
    </tr>
        <% @recipes .each do |recipe| %>	
      <tr>	
         <td><%= recipe.name %></td>	
        <td><%= recipe.time%></td>	
         <td><%= link_to "Click for Directions", recipe_path(recipe) %></td>
   <% end %>	
      </tr>	
  </tbody>	
</table>	
<br>

